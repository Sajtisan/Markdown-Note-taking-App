<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MarkdownNotesClient.Views.MainView">

    <StackPanel Margin="20" Spacing="10" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Welcome Back" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <TextBlock Text="Username"/>
        <TextBox x:Name="UsernameField" Watermark="Enter username..."/>
        
        <TextBlock Text="Password"/>
        <TextBox x:Name="PasswordField" Watermark="Enter password..." PasswordChar="*"/>
        
        <Button Content="Login" 
                HorizontalAlignment="Stretch" 
                HorizontalContentAlignment="Center"
                Click="OnLoginClick"
                Background="#2196F3" 
                Foreground="White"
                Margin="0,10,0,0"/>
                
        <TextBlock x:Name="ErrorText" Foreground="Red" HorizontalAlignment="Center" IsVisible="False"/>
    </StackPanel>

</UserControl>